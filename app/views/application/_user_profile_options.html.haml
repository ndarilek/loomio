%li
  %a{href: profile_path}
    %i.fa.fa-cog
    = t :'common.profile'
- unless is_in_sandstorm?
  %li
    %a{href: email_preferences_path}
      %i.fa.fa-envelope
      = t :'common.email_settings'
%li
  %a{href: help_path}
    %i.fa.fa-star
    = t :"help.help"

- if Rails.application.secrets.intercom_app_id.present?
  %li
    %a.intercom-proxy{href: "mailto:#{Rails.application.secrets.intercom_app_id}@incoming.intercom.io"}
      %i.fa.fa-question-circle
      = t :"contact_page.contact_us"
- if is_in_sandstorm?
  - if current_user.is_admin
    %li
      %a{href: "/admin"}
        = t :admin
- unless is_in_sandstorm?
  %li
    %a{href: destroy_user_session_path, 'data-method' => 'delete'}
      %i.fa.fa-sign-out
      = t :sign_out
